# ============================================================================
# Private API Configuration
# ============================================================================

# Service Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3100
SERVICE_NAME=private-api

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=private-api
KAFKA_GROUP_ID=purchase-processor-group
KAFKA_SSL_ENABLED=false

# Kafka SASL (Optional - for production with Strimzi)
# KAFKA_SASL_MECHANISM=scram-sha-512
# KAFKA_SASL_USERNAME=private-api-user
# KAFKA_SASL_PASSWORD=changeme

# Kafka Consumer Configuration
KAFKA_CONSUMER_SESSION_TIMEOUT_MS=30000
KAFKA_CONSUMER_HEARTBEAT_INTERVAL_MS=3000
KAFKA_CONSUMER_MAX_BATCH_SIZE=100
KAFKA_CONSUMER_AUTO_COMMIT_INTERVAL_MS=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=lobster-shop
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_POOL_SIZE=20
MONGODB_CONNECT_TIMEOUT_MS=10000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# Health Check Configuration
HEALTH_CHECK_TIMEOUT_MS=5000
SHUTDOWN_TIMEOUT_MS=30000

# Kafka Timeouts and Retries
KAFKA_CONNECTION_TIMEOUT_MS=10000
KAFKA_REQUEST_TIMEOUT_MS=30000
KAFKA_RETRY_ATTEMPTS=5
KAFKA_RETRY_BACKOFF_MS=300