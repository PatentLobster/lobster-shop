# ============================================================================
# Public API Configuration
# ============================================================================

# Service Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3000
SERVICE_NAME=public-api

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=public-api
KAFKA_SSL_ENABLED=false

# Kafka SASL (Optional - for production with Strimzi)
# KAFKA_SASL_MECHANISM=scram-sha-512
# KAFKA_SASL_USERNAME=public-api-user
# KAFKA_SASL_PASSWORD=changeme

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Private API URL (for proxying requests)
PRIVATE_API_URL=http://localhost:3100

# Frontend Runtime Config (exposed via /api/config endpoint)
PUBLIC_API_EXTERNAL_URL=http://localhost:3000

# Health Check Configuration
HEALTH_CHECK_TIMEOUT_MS=5000
SHUTDOWN_TIMEOUT_MS=30000

# Kafka Timeouts and Retries
KAFKA_CONNECTION_TIMEOUT_MS=10000
KAFKA_REQUEST_TIMEOUT_MS=30000
KAFKA_RETRY_ATTEMPTS=5
KAFKA_RETRY_BACKOFF_MS=300

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
